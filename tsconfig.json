{
	"compilerOptions": {
		"target": "es5",
		"module": "commonjs",
		"lib": ["es6", "DOM"],
		"noImplicitThis": true,
		"strictNullChecks": true,
		"alwaysStrict": true,
		"outDir": "build",
		"rootDir": "src",
		"strict": true,
		"noImplicitAny": true,
		"esModuleInterop": true,
		"resolveJsonModule": true
	}
}